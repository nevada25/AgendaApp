<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INFORMACION DE LA APLICACIÓN"
            android:id="@+id/TvTitulo"
            android:textAlignment="center"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="#000" />

    </LinearLayout>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fff"
        card_view:cardCornerRadius="0.5dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        android:focusable="false"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.34">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/IvIInfo"
        android:background="@drawable/img562" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:text="ESTA APLICACION FUE DISEÑADA Y PROGRAMADA POR ALUMNOS DEL QUINTO CICLO DE LA CARRERA DE INGENIERIA DE SISTEMAS EN LA UNIVERSIDAD PERUANA UNIÓN  TARAPOTO COMO PROYECTO FINAL PARA EL CURSO DE LENGUAJE DE PROGRAMACIÓN III"
        android:id="@+id/TvDescrip"
        android:textAlignment="gravity"
        android:password="false"
        android:textColor="#000"
        android:autoText="false"
        android:focusableInTouchMode="false"
        android:padding="5dp" />
</LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fff"
        card_view:cardCornerRadius="0.5dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        android:focusable="false"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.34">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESARROLLADORES:"
            android:id="@+id/textView4"
            android:textStyle="bold"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-KEVIN ANTONY CALDERON GUABLOCHE"
            android:id="@+id/textView2"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView3"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-LUIS ALBERTO LAVADO LLARO"
            android:id="@+id/textView5"
            android:textColor="#000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView6"
            android:textColor="#000" />

    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>